{
  "name": "json-rpc-dual-engine",
  "version": "0.6.4",
  "description": "JSON-RPC-2.0 client and server protocol-agnostic engine.",
  "author": "Leonardo Raele <leonardoraele@gmail.com>",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/leonardoraele/json-rpc-dual-engine"
  },
  "engines": {
    "node": ">=22"
  },
  "exports": {
    ".": "./dist/index.js",
    "./server": "./dist/json-rpc/json-rpc-server.js",
    "./server/node": "./dist/json-rpc/json-rpc-server-node.js",
    "./client": "./dist/json-rpc/json-rpc-client.js",
    "./client/node": "./dist/json-rpc/json-rpc-client-node.js"
  },
  "imports": {
    "#src/*.js": "./src/*.js"
  },
  "files": [
    "./dist/**/*"
  ],
  "scripts": {
    "test": "node --import=tsx --test **/*.ts",
    "build": "tsc --outdir dist",
    "prebuild": "rimraf dist",
    "publish": "npm run test && npm run build && npm version $(conventional-recommended-bump) && npm publish"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "conventional-recommended-bump": "^10.0.0",
    "expect": "^29.7.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "keywords": [
    "json",
    "rpc",
    "jsonrpc",
    "json-rpc",
    "jsonrpc2",
    "json-rpc2",
    "server",
    "client",
    "tcp",
    "socket",
    "websocket",
    "http"
  ]
}
